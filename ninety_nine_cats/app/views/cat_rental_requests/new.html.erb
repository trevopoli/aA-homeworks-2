<h1>Request a Cat Rental</h1>

<form action="<%= cat_rental_requests_url %>" method="post">

    <label for="select_cat">Select Cat: </label>
    <select name="cat_rental_request[cat_id]" id="select_cat">
        <option disable selected>- select a cat-</option>
        <% Cat.all.each do |cat| %>
            <option value="<%= cat.id %>"> <%= cat.name %> </option>  
        <% end %>
    </select>

    <br>
    <label for="start_date">Rental Start Date: </label>
    <input type="date" name="cat_rental_request[start_date]" id="start_date">

    <br>
    <label for="end_date">Rental End Date: </label>
    <input type="date" name="cat_rental_request[end_date]" id="end_date">

    <br>
    <input type="submit" value = "Request rental">
</form>