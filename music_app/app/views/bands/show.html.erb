<h1><%= @band.name %></h1>

<br>
<h3>Albums</h3>

<br>
<ul>
    <%  @band.albums.each do |album|%>
        <li><a href="<%= album_url(album.id) %>"><%= album.title %></a></li>
    <% end %>
</ul>
<br>
<a href="<%= new_band_album_url(@band.id) %>">Add an album by <%= @band.name %></a>
<br>
<form action="<%= band_url(@band.id) %>" method="post">
    <%= auth_token %>
    <br>
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete band">
</form>