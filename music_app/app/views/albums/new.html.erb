<h1>Add a New Album by <%= @band.name %></h1>

<form action="<%= albums_url %>" method="post">
    <%= auth_token %>

    <label for="band_name">Band's Name: </label>
    <select type="text" name="album[band_id]" id="band_name">
        <option value="<%= @band.id %>"><%= @band.name %></option>
    </select>

    <br>
    <label for="album_title">Album Title: </label>
    <input type="text" name="album[title]" id="album_title">

    <br>
    <label for="album_year">Year Released: </label>
    <input type="number" name="album[year]" id="album_year" min="1900" max="2020">

    <%# add radio buttons for live or studio %>
    <br>
    <label for="album_studio">Studio:</label>
    <input type="radio" id="album_studio" name="album[live]" value="false" checked>
    <label for="album_live">Live:</label>
    <input type="radio" id="album_live" name="album[live]" value="true">

    <br>
    <input type="submit" value="Add album">
</form>